<script>
    const musics = [];
</script>
@{
    var list = ViewBag.list;
    var size = ViewBag.size;
    for (var i = 0; i < size; i++)
    {
        <script>
             musics.push({
                id:@list[0].stt,
                number:"@list[0].number",
                file:"@list[0].SP.SP_URL",
                title:"@list[0].SP.TenSP",
                artist:"@list[0].TrinhBay",
                 time: "@list[0].Time",
                 MaSP:"@list[0].MaSP",
                active:false,
             })
        </script>
        {
            list.Remove(list[0]);
        }
    }
}

@section Script{


  
    <script src="/Assets/javaScript/main.js"></script>
}
<div id="main-content">
    <header>
        <nav class="main-content__header-nav">
            <i class="fas fa-arrow-left"></i>
            <i class="fas fa-arrow-right"></i>
        </nav>
        <form class="main-content__search-form" action="/Favorite/FavoriteSong" method="post">
            <i class="fas fa-search search-btn"></i>

            <input type="text" class="search-input" placeholder="Search for artist, songs....." name="value">
            <button type="submit"></button>
        </form>
    </header>

    <div class="Notable-slider">
        <div class="container">
            <h2>New Artits</h2>
            <section class="customer-logos slider">
                @foreach (var item in listArtist)
                {
                    <a class="slide" href="/Artist/DetailArtists?mans=@item.mans">
                        <img src=@item.URL_img.TrimStart('~')>
                    </a>
                }


            </section>
        </div>
        <script>
            $(document).ready(function () {
                $('.customer-logos').slick({
                    slidesToShow: 4,
                    slidesToScroll: 1,
                    autoplay: true,
                    autoplaySpeed: 1500,
                    arrows: false,
                    dots: false,
                    pauseOnHover: false,
                    responsive: [{
                        breakpoint: 768,
                        settings: {
                            slidesToShow: 5
                        }
                    }, {
                        breakpoint: 520,
                        settings: {
                            slidesToShow: 4
                        }
                    }]
                });
            });
        </script>
    </div>

    <div class="my-playlist">
        <div class="playlist-head">
            <h4>My Playlist</h4>
            <a class="btn-hover">Show all</a>
        </div>
        <div class="playlist-list" style="overflow-x:scroll;overflow-y:no-display; height:250px;">
            <div class="playlist playlist-list__title">
                <p class="playlist__number">#</p>
                <p class="playlist__title">TITLE</p>
                <p class="playlist__artist">ARTIST</p>
                <p class="playlist__time">TIME</p>
            </div>


        </div>
    </div>

    <div class="play-song">
        <div class="play-control">
            <div class="play-control__act">
                <i class="far fa-heart" id='heart'></i>
                <i class="fas fa-music"></i>
                <i class="fas fa-expand-alt"></i>
            </div>
            <div class="play-control__main">
                <i class="fas fa-redo-alt play-repeat"></i>
                <i class="fas fa-fast-backward play-backward main-icon"></i>
                <!-- <i class="fas fa-pause-circle pause-icon main-icon main-icon--big"></i> -->
                <span class="play-inner">
                    <i class="fas fa-play-circle play-icon main-icon main-icon--big"></i>
                </span>
                <i class="fas fa-fast-forward play-forward main-icon"></i>
                <i class="fas fa-random shuffle-song"></i>
            </div>
            <div class="play-control__volume">
                <i class="fas fa-volume-mute"></i>
                <input type="range" id="volume" class="volume" value="1" min="0" max="1" step="0.1">
                <i class="fas fa-volume-up"></i>
            </div>
        </div>
        <div class="play-seekbar">
            <div class="timer__left">0:00</div>
            <input type="range" name="range" id="range" class="range" />
            <audio src="/Assets/mp3/assests_mp3_ntt.mp3" id="song"></audio>
            <div class="timer__right">3.00</div>
        </div>
    </div>
</div>


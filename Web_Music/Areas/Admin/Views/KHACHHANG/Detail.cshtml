@model Web_Music.Models.KHACH_HANG
@section Head{
    <title>Custom Profile</title>
}

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/NewLayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profile</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Custom Profile</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3" style="max-width:45%">

                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="@Url.Content(Model.URL_img)"
                                     alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@Model.TenKH</h3>



                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>CCCD</b> <a class="float-right">@Model.CCCD</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Date of brith</b> <a class="float-right">@(Model.NgaySinh.ToString().Substring(0,10))</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Address</b> <a class="float-right">@Model.DiaChi</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Sex</b> <a class="float-right">@((Model.GT.ToString()=="True")? "Male" : "Female")</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Note</b> <a class="float-right">@Model.GhiChu</a>
                                </li>
                            </ul>

                            <a href="@Url.Content("~/Admin/KHACHHANG/Index")" class="btn btn-primary btn-block"><b>Home</b></a>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->

                <div class="col-md-9">
                    <div class="card" style="overflow-y:scroll;">
                        @*<div class="card-header">


                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>*@
                        <div class="card-body p-0">
                            <table class="table table-striped projects">
                                <thead>
                                    <tr>
                                        <th style="width: 1%">
                                            #
                                        </th>
                                        <th style="width:15%">
                                            Album
                                        </th>
                                        <th style="width: 25%">
                                            Sing
                                        </th>

                                        @*<th style="width: 30%">
                                            </th>*@
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.al)
                                    {
                                        <tr>
                                            <td>
                                                #
                                            </td>
                                            <td>

                                                <li class="list-inline-item">
                                                    @item.TenAL
                                                </li>
                                            </td>
                                            <td>
                                                <ul class="list-inline">
                                                    @item.BH

                                                </ul>
                                            </td>

                                            @*<td class="project-actions text-right">
                                                    <a class="btn btn-primary btn-sm" href='/Admin/NGHESI/Detail?id=@item.mans'>
                                                        <i class="fas fa-folder">
                                                        </i>
                                                        View
                                                    </a>
                                                    <a class="btn btn-info btn-sm" href='/Admin/NGHESI/Edit?id=@item.mans'>
                                                        <i class="fas fa-pencil-alt">
                                                        </i>
                                                        Edit
                                                    </a>
                                                    <a class="btn btn-danger btn-sm" onclick="if (confirm('Ban co chac chan muon xoa khong') == true) { location.href='/Admin/NGHESI/Delete?id=@item].mans'}">
                                                        <i class="fas fa-trash">
                                                        </i>
                                                        Delete
                                                    </a>
                                                </td>*@
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- /.card -->
                </div>

                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@model IEnumerable<Web_Music.Models.NGHE_SI>
@section Head{
    
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.0/css/all.css">

   
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="~/Assets/css/admin.css" rel="stylesheet" />
   
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500&display=swap"
          rel="stylesheet">

    }
    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    }



   
    @{
        var list = ViewBag.list;

    }
<div class="content">
    <button onclick="if ( true) { location.href='/Admin/NGHESI/Create' }">Create</button>
    <div class="list-item">

        @for (int i = 0; i < ViewBag.size - 1; i++)
        {

            <div class="item">
                <div class="item-content">
                    <img class="img" src="@Url.Content(list[0].URL_img)" />
                    <p class="text">@list[0].NgheDanh</p>
                </div>
                <div class="btn">
                    <button class="btn-item btn-detail" onclick="if ( true) { location.href='/Admin/NGHESI/Detail?id=@list[0].mans' }" )>Detail</button>
                    <button class="btn-item btn-edit" onclick="if ( true) { location.href='/Admin/NGHESI/Edit?id=@list[0].mans' }" )>Edit</button>
                    <button class="btn-item btn-delete" href="#" onclick="if (confirm('Ban co chac chan muon xoa khong') == true) { location.href='/Admin/NGHESI/Delete?id=@list[0].mans' }">Delete</button>


                </div>
            </div>


            list.Remove(list[0]);
        }

    </div>
</div>

